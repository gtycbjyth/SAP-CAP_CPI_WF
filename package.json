{
    "name": "booking-project",
    "version": "1.0.0",
    "description": "A simple CAP project.",
    "repository": "<Add your repository here>",
    "license": "UNLICENSED",
    "private": true,
    "dependencies": {
        "@sap/audit-logging": "^5.5.5",
        "@sap/cds": ">=5",
        "@sap/xsenv": "^3.3.2",
        "@sap/xssec": "^3.2.13",
        "express": "^4",
        "hdb": "^0.19.0",
        "passport": "^0.6.0"
    },
    "devDependencies": {
        "@sap/ux-specification": "^1.102.4",
        "rimraf": "^3.0.2",
        "sqlite3": "^5.0.4"
    },
    "scripts": {
        "start": "cds run",
        "watch-ui.booking": "cds watch --open ui.booking/webapp/index.html?sap-ui-xx-viewCache=false",
        "undeploy": "cf undeploy booking-project --delete-services --delete-service-keys --delete-service-brokers",
        "build": "rimraf resources mta_archives && mbt build --mtar archive",
        "deploy": "cf deploy mta_archives/archive.mtar --retries 1"
    },
    "eslintConfig": {
        "extends": "eslint:recommended",
        "env": {
            "es2020": true,
            "node": true,
            "jest": true,
            "mocha": true
        },
        "globals": {
            "SELECT": true,
            "INSERT": true,
            "UPDATE": true,
            "DELETE": true,
            "CREATE": true,
            "DROP": true,
            "CDL": true,
            "CQL": true,
            "CXL": true,
            "cds": true
        },
        "rules": {
            "no-console": "off",
            "require-atomic-updates": "off"
        }
    },
    "cds": {
        "requires": {
            "db": {
                "kind": "hana-cloud"
            },
            "auth": {
                "kind": "xsuaa"
            },
            "[hybrid]": {
                "auth": {
                    "kind": "xsuaa"
                }
            },
            "approuter": {
                "kind": "cloudfoundry"
            }
        }
    },
    "sapux": [
        "app/ui.booking"
    ]
}